<?xml version="1.0" encoding="utf-8"?>
<Dashboard>
  <Title Text="Sample Dashboard" />
  <DataSources>
    <ExcelDataSource Name="Excel Data Source" ComponentName="excelDataSource2" ConnectionName="excelDataSourceConnectionParam">
